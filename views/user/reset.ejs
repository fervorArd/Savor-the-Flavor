<div class="row">
  <div class="col">
    <form action="/user/reset/<%= token %>" method="post">
      <legend>Reset Password</legend>
        <%- include ('../partials/messages'); %>
      <div class="form-group">
        <label for="password">New Password</label>
        <input type="password" name="password" value="" placeholder="New Password" class="form-control">
      </div>
      <div class="form-group">
        <label for="password">Confirm Password</label>
        <input type="password" name="confirm" value="" placeholder="Confirm Password" class="form-control">
      </div>
      <div class="form-group">
        <button type="submit" name="button" class="btn btn-primary">Update Password</button>
      </div>
    </form>
  </div>
</div>
