<%- include ('../partials/messages'); %>
<h3>Add a Product</h3>
<a href="/admin/products">
  <button type="button" class="btn btn-primary" name="button">Back to Products</button>
</a>
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <form action="/admin/add-product" method="POST">
        <div class="form-group required">
          <label for="name" class="control-label">Title</label>
          <input
            type="text"
            id="title"
            name="title"
            class="form-control"
            value="<%= typeof title != 'undefined' ? title : '' %>"
          />
        </div>
        <div class="form-group required">
          <label for="name" class="control-label">Description</label>
          <textarea
            type="textarea"
            id="description"
            name="description"
            class="form-control"
            value="<%= typeof description != 'undefined' ? description : '' %>"
          ></textarea>
        </div>
        <div class="form-group required">
          <label for="email" class="control-label">Category</label>
          <input
            type="text"
            id="category"
            name="category"
            class="form-control"
            value="<%= typeof category != 'undefined' ? category : '' %>"
          />
        </div>
        <div class="form-group required">
          <label for="password" class="control-label">Price</label>
          <input
            type="text"
            id="price"
            name="price"
            class="form-control"
            value="<%= typeof price != 'undefined' ? price : '' %>"
          />
        </div>
        <div class="form-group required">
          <label for="password2" class="control-label">Image</label>
          <input
            type="text"
            id="imagePath"
            name="imagePath"
            class="form-control"
            value="<%= typeof imagePath != 'undefined' ? imagePath : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Submit
        </button>
      </form>
    </div>
  </div>
</div>
