<% if(products){ %>
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group">
          <% products.forEach((product) => { %>
            <li class="list-group-item">
              <span class="badge badge-pill badge-secondary"><%= product.qty %></span>
              <strong>Title: <%= product.item.title %> </strong>
              <span class="btn btn-success"><%= product.price %></span>
              <div class="btn-group">
                <button type="button" class="btn btn-primary btn-xs dropdown-menu-toggle" name="button" data-toggle="dropdown">Action <span class="caret"></span></button>
                <ul class="dropdown-menu">
                  <li><a href="/shop/reduce/<%= product.item._id %>">Reduce by 1</a></li>
                  <li><a href="/shop/remove/<%= product.item._id %>">Remove all</a></li>
                </ul>
              </div>
            </li>
          <% }); %>
        </ul>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong>Total: <%= totalPrice %></strong>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <a href="/shop/checkout" type="button" class="btn btn-success" name="button">Checkout</a>
      </div>
    </div>
  </div>
<% } else { %>
  <h2>No Items in the Cart</h2>
<% } %>
